<%- include('../partials/header') %>
    <div style="margin-top: 40px;">
        <div style="display:flex; justify-content:space-between; align-items: center;">
            <h1>Transactions</h1>
            <div style="display: flex; gap: 10px;">
                <button onclick="document.getElementById('categoryModal').style.display='flex'" class="btn-outline">+
                    New Category</button>
                <button onclick="document.getElementById('addModal').style.display='flex'" class="btn-primary">+ Add
                    Transaction</button>
            </div>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Remarks</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(t=> { %><tr>
                            <td>
                                <%= t.date %>
                            </td>
                            <td>
                                <%= t.Category ? t.Category.name : 'Other' %>
                            </td>
                            <td>
                                <%= t.description || '-' %>
                            </td>
                            <td class="type-<%= t.type %>">
                                $<%= t.amount %>
                                    <% if (t.receiptUrl) { %>
                                        <div style="margin-top: 4px;">
                                            <a href="<%= t.receiptUrl %>" target="_blank"
                                                style="font-size: 0.7rem; color: var(--primary); text-decoration: none;">ðŸ“„
                                                View Receipt</a>
                                        </div>
                                        <% } %>
                            </td>
                            <td>
                                <div style="display: flex; gap: 10px;">
                                    <button class="btn-outline edit-btn" style="padding: 5px 10px; font-size: 0.8rem;"
                                        data-id="<%= t.id %>" data-type="<%= t.type %>"
                                        data-category="<%= t.categoryId %>" data-amount="<%= t.amount %>"
                                        data-description="<%= t.description %>" data-date="<%= t.date %>"
                                        data-receipt="<%= t.receiptUrl || '' %>">
                                        Edit
                                    </button>
                                    <form action="/transactions/<%= t.id %>?_method=DELETE" method="POST"
                                        onsubmit="return confirm('Are you sure?')">
                                        <button type="submit" class="btn-outline"
                                            style="padding: 5px 10px; font-size: 0.8rem; border-color: var(--danger); color: var(--danger);">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <div id="addModal"
        style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); z-index:1000; justify-content:center; align-items:center;">
        <div class="auth-card">
            <h3>Add Transaction</h3>
            <form action="/transactions/add" method="POST" enctype="multipart/form-data">
                <div class="form-group"><label>Type</label><select name="type">
                        <option value="expense">Expense</option>
                        <option value="income">Income</option>
                    </select></div>
                <div class="form-group"><label>Category</label><select name="categoryId">
                        <% categories.forEach(c=> { %><option value="<%= c.id %>">
                                <%= c.name %>
                            </option>
                            <% }) %>
                    </select></div>
                <div class="form-group"><label>Amount</label><input type="number" name="amount" step="0.01" required>
                </div>
                <div class="form-group"><label>Remarks</label><input type="text" name="description"
                        placeholder="e.g. Bought groceries"></div>
                <div class="form-group"><label>Date</label><input type="date" name="date" required></div>
                <div class="form-group">
                    <label>Receipt (Optional)</label>
                    <input type="file" name="receipt" accept="image/*,application/pdf"
                        style="font-size: 0.8rem; padding: 10px; background: var(--bg-main); border-radius: 8px; border: 1px solid var(--border); width: 100%;">
                </div>
                <button type="submit" class="btn-primary" style="width:100%;">Add</button>
                <button type="button" onclick="document.getElementById('addModal').style.display='none'"
                    class="btn-outline" style="width:100%; margin-top:10px;">Cancel</button>
            </form>
        </div>
    </div>
    <div id="categoryModal"
        style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); z-index:1000; justify-content:center; align-items:center;">
        <div class="auth-card">
            <h3>Add New Category</h3>
            <form action="/categories/add" method="POST" style="margin-top: 20px;">
                <div class="form-group"><label>Name</label><input type="text" name="name" placeholder="e.g. Health"
                        required></div>
                <div class="form-group"><label>Type</label>
                    <select name="type">
                        <option value="expense">Expense</option>
                        <option value="income">Income</option>
                    </select>
                </div>
                <button type="submit" class="btn-primary" style="width:100%;">Create Category</button>
                <button type="button" onclick="document.getElementById('categoryModal').style.display='none'"
                    class="btn-outline" style="width:100%; margin-top:10px;">Cancel</button>
            </form>
        </div>
    </div>
    <!-- Edit Modal -->
    <div id="editModal"
        style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); z-index:1000; justify-content:center; align-items:center;">
        <div class="auth-card">
            <h3>Edit Transaction</h3>
            <form action="/transactions/update?_method=PUT" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="id" id="editId">
                <div class="form-group"><label>Type</label>
                    <select name="type" id="editType">
                        <option value="expense">Expense</option>
                        <option value="income">Income</option>
                    </select>
                </div>
                <div class="form-group"><label>Category</label>
                    <select name="categoryId" id="editCategory">
                        <% categories.forEach(c=> { %><option value="<%= c.id %>">
                                <%= c.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group"><label>Amount</label><input type="number" name="amount" id="editAmount"
                        step="0.01" required></div>
                <div class="form-group"><label>Remarks</label><input type="text" name="description"
                        id="editDescription"></div>
                <div class="form-group"><label>Date</label><input type="date" name="date" id="editDate" required></div>
                <div class="form-group">
                    <label>Receipt (Upload to Replace)</label>
                    <div id="currentReceipt"
                        style="margin-bottom: 8px; font-size: 0.8rem; color: var(--text-muted); display: none;">
                        ðŸ“„ Has current receipt
                    </div>
                    <input type="file" name="receipt" accept="image/*,application/pdf"
                        style="font-size: 0.8rem; padding: 10px; background: var(--bg-main); border-radius: 8px; border: 1px solid var(--border); width: 100%;">
                </div>
                <button type="submit" class="btn-primary" style="width:100%;">Update</button>
                <button type="button" onclick="document.getElementById('editModal').style.display='none'"
                    class="btn-outline" style="width:100%; margin-top:10px;">Cancel</button>
            </form>
        </div>
    </div>

    <script>
        document.querySelectorAll('.edit-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const { id, type, category, amount, description, date, receipt } = btn.dataset;
                document.getElementById('editId').value = id;
                document.getElementById('editType').value = type;
                document.getElementById('editCategory').value = category;
                document.getElementById('editAmount').value = amount;
                document.getElementById('editDescription').value = description;
                document.getElementById('editDate').value = date;

                const receiptDiv = document.getElementById('currentReceipt');
                if (receipt) {
                    receiptDiv.style.display = 'block';
                } else {
                    receiptDiv.style.display = 'none';
                }

                document.getElementById('editModal').style.display = 'flex';
            });
        });
    </script>
    <%- include('../partials/footer') %>