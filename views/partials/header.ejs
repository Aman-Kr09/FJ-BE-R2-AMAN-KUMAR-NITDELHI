<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | FinanceTracker
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        .nav-links a.active {
            color: var(--primary);
            font-weight: 600;
        }

        .nav-currency-form {
            display: flex;
            align-items: center;
            gap: 8px;
        }
    </style>
</head>

<body>
    <div class="container">
        <nav>
            <a href="/" class="logo">FinanceTracker</a>

            <button class="menu-btn" id="menuBtn">
                <i data-lucide="menu"></i>
            </button>

            <div class="nav-links" id="navLinks">
                <% if (user) { %>
                    <a href="/dashboard">Dashboard</a>
                    <a href="/transactions">Transactions</a>
                    <a href="/budgets">Budgets</a>
                    <a href="/savings">Savings</a>
                    <a href="/reports">Reports</a>
                    <a href="/calculator">Calculator</a>

                    <div style="height: 1px; background: var(--border); width: 100%; margin: 10px 0;"
                        class="mobile-only"></div>

                    <form action="/user/update-currency" method="POST" id="currencyForm" class="nav-currency-form">
                        <span style="font-size: 0.8rem; color: var(--text-muted);">Currency:</span>
                        <select name="currency" class="currency-select" onchange="this.form.submit()">
                            <option value="USD" <%=user.currency==='USD' ? 'selected' : '' %>>USD $</option>
                            <option value="INR" <%=user.currency==='INR' ? 'selected' : '' %>>INR ₹</option>
                            <option value="EUR" <%=user.currency==='EUR' ? 'selected' : '' %>>EUR €</option>
                            <option value="GBP" <%=user.currency==='GBP' ? 'selected' : '' %>>GBP £</option>
                            <option value="JPY" <%=user.currency==='JPY' ? 'selected' : '' %>>JPY ¥</option>
                        </select>
                    </form>

                    <a href="/auth/logout" class="btn-outline"
                        style="color: var(--danger); border-color: var(--danger); font-size: 0.9rem; padding: 8px 16px;">Logout</a>
                    <% } else { %>
                        <a href="/auth/login">Login</a>
                        <a href="/auth/register" class="btn-primary">Get Started</a>
                        <% } %>
            </div>
        </nav>

        <script>
            // Initialize Lucide icons
            lucide.createIcons();

            // Hamburger Menu Logic
            const menuBtn = document.getElementById('menuBtn');
            const navLinks = document.getElementById('navLinks');

            if (menuBtn) {
                menuBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    navLinks.classList.toggle('active');
                    const icon = menuBtn.querySelector('i');
                    if (navLinks.classList.contains('active')) {
                        icon.setAttribute('data-lucide', 'x');
                    } else {
                        icon.setAttribute('data-lucide', 'menu');
                    }
                    lucide.createIcons();
                });
            }

            // Close menu when clicking outside
            document.addEventListener('click', (e) => {
                if (navLinks.classList.contains('active') && !navLinks.contains(e.target) && e.target !== menuBtn) {
                    navLinks.classList.remove('active');
                    menuBtn.querySelector('i').setAttribute('data-lucide', 'menu');
                    lucide.createIcons();
                }
            });

            // Highlight active link
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-links a').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        </script>