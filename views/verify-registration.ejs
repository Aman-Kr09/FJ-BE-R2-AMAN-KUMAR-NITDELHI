<%- include('partials/header') %>
    <div class="auth-wrapper">
        <div class="auth-card">
            <h2 class="auth-title">Verify Email</h2>
            <p style="color: var(--text-muted); text-align: center; margin-bottom: 20px;">
                We've sent a 6-digit verification code to <strong>
                    <%= email %>
                </strong>.
                Please enter it below to activate your account.
            </p>
            <form action="/auth/verify-registration" method="POST">
                <input type="hidden" name="email" value="<%= email %>">
                <div class="form-group">
                    <label>Verification Code</label>
                    <input type="text" name="otp" required maxlength="6" placeholder="000000"
                        style="text-align: center; letter-spacing: 5px; font-size: 1.5rem;">
                </div>
                <button type="submit" class="btn-primary" style="width: 100%;">Verify & Activate</button>
            </form>
            <div style="text-align: center; margin-top: 25px;">
                <p style="color: var(--text-muted); font-size: 0.9rem;">
                    Didn't receive the code?
                    <a href="/auth/register" style="color: var(--primary);">Try registering again</a>
                </p>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>